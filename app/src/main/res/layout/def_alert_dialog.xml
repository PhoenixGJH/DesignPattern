<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/text_def_alert_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_def_alert_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_def_alert_dialog_title"
        android:layout_marginTop="10dp"
        android:text="content" />

    <TextView
        android:id="@+id/text_def_alert_dialog_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_def_alert_dialog_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="确定" />

    <TextView
        android:id="@+id/text_def_alert_dialog_negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_def_alert_dialog_content"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/text_def_alert_dialog_positive"
        android:text="取消" />
</RelativeLayout>